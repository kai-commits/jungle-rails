<h1>Log In</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_for :login do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        <%= f.submit "Log In", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>